<div id="page-wrapper">
  <div class="container container-fluid">
    <!-- Page Heading -->
      <div class="row">
        <div class="col-lg-12">
          <h1 class="page-header">
              신청현황<small>application condition</small>
          </h1>
          <%= flash[:notice] %>
          <%= flash[:caution] %>


          <%= form_tag admin_index_path,  method: "get" do %>
            <input class="btn btn-default" type="submit" value="학번 순" name="order">
            <input class="btn btn-default" type="submit" value="사물함 순" name="order">
            <input class="btn btn-default" type="submit" value="이름 순" name="order">
          <% end %>
          <div class="table-responsive">
            <table class="table table-condensed">
              <thead>
                <tr>
                  <th class="admin_index">이름</th>
                  <th class="admin_index">학번</th>
                  <th class="admin_index">이메일</th>
                  <th class="admin_index">신청한 사물함</th>
                  <th class="admin_index">비밀번호 변경</th>
                  <th class="admin_index">계정삭제</th>
                </tr>
              </thead>
              <tbody>
                <% @user_admin.each do |u_i| %>
                  <tr>
                    <td>
                      <%= u_i.name %>
                    </td>
                    <% if !!(u_i.identity == "admin") %>
                      <td>관리자</td>
                    <% else %>
                      <td><%= u_i.stuN %></td>
                    <% end %>
                    <td><%= u_i.email %></td>
                    <% if u_i.seatNumber == nil%>
                      <td>미신청</td>
                    <% else %>
                      <td><%= u_i.seatNumber %></td>
                    <% end %>
                    <td>
                        <%= link_to "[변경]",edit_admin_path(u_i.id), method:"get", data: {confirm: "비밀번호가 '123456'으로 변경됩니다. 정말 변경하시겠습니까?"} %>
                    </td>
                    <td>
                      <% if !!(u_i.identity == "admin") %>
                        <%= link_to "[전체삭제]", "/destroy_all/:u_i.id", method:"delete", data: {confirm: "관리자 계정을 제외한 모든 계정이 삭제됩니다. 정말 삭제하시겠습니까? (삭제된 계정은 복구할 수 없습니다.)"} %>
                      <% else %>
                        <%= link_to "[삭제]", admin_path(u_i.id), method: "delete", data: {confirm: "선택된 계정이 삭제됩니다. 정말 삭제하시겠습니까? (삭제된 계정은 복구할 수 없습니다.)"} %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
