<%= image_tag("logo.gif", id:"img_session") %>
<br>
<div class="container contents-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
       <div class="form-group">
      <%= f.label :이메일 %><br/>
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "종합정보시스템 이메일" %>
    </div>
  </div>
  </div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
     <div class="form-group">
      <%= f.label :비밀번호 %><br/>
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "초기 생년월일8자리" %>
    </div>
  </div>
</div>

    <% if devise_mapping.rememberable? -%>
    <div class="col-md-4 col-md-offset-4">
      <%= render "devise/shared/links" %>
      <br>
      <div class="field" style="inline-block;">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "control-label" %>
      </div>
    </div>
    <% end -%>
    <div class="col-md-4 col-md-offset-4">
      <br>
      <div class="actions">
        <%= f.submit "로그인" , class: 'btn btn-default'%>
      </div>
    </div>

  <% end %>
</div>
