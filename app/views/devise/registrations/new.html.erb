<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="wall"></div>

  <%= image_tag("logo.gif", id:"img_session") %>
<br>
<div class="container contents-center">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2><%= t(".sign_up") %></h2>
  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true, label: "이름" %>
    <%= f.input :email, required: true %>
    <%= f.input :password, required: true %>
    <%= f.input :password_confirmation, required: true %>
    <%= f.input :major, required: true, label: "학과", placeholder: '응용화학과'%>
    <%= f.input :identity, required: true, label: "권한", placeholder: '1/2/3'%>
    <%= f.input :stuN, required: true, label: "학번", placeholder: '2013101234'%>
  </div>
</div>
</div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
  <div class="form-actions">
    <%= f.button :submit, t(".sign_up") %>
    <%= render "devise/shared/links" %>
  </div>

<% end %>

</div>
  </div>
</div>
<div class="wall"></div>
